# Electrum Environment Variables
# Copy this file to .env and set your actual values
# Note: .env files are ignored by git for security

# Debug mode
DEBUG=false
DISABLE_PAYMENT=false
LOG_RECORDS=1000

# Firebase
FIREBASE_KEY=/path/to/firebase.json

# Server configuration
LISTEN_TYPE=port
BIND_IP=0.0.0.0
PORT=5100

# TLS/HTTPS
TLS_ENABLED=false
TLS_CERT_FILE=/path/to/cert.pem
TLS_KEY_FILE=/path/to/key.pem

# MongoDB configuration
MONGO_ENABLED=true
MONGO_HOST=127.0.0.1
MONGO_PORT=27017
MONGO_USER=your_mongo_user
MONGO_PASSWORD=your_mongo_password
MONGO_DATABASE=electrum

# Redsys Merchant Configuration
# IMPORTANT: Keep these values secret!
# Get these from your Redsys merchant account
MERCHANT_SECRET=your_base64_encoded_secret_here
MERCHANT_CODE=your_merchant_code_here
MERCHANT_TERMINAL=your_terminal_number_here

# Redsys API endpoint
# Test environment:
# MERCHANT_REQUEST_URL=https://sis-t.redsys.es:25443/sis/rest/trataPeticionREST
# Production environment:
# MERCHANT_REQUEST_URL=https://sis.redsys.es/sis/rest/trataPeticionREST
MERCHANT_REQUEST_URL=https://sis-t.redsys.es:25443/sis/rest/trataPeticionREST
